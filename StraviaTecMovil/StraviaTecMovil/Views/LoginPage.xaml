<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StraviaTecMovil.Views.LoginPage"
             xmlns:context="clr-namespace:StraviaTecMovil.ViewModels"
             x:DataType="context:LoginViewModel"
             Title="Iniciar Sesión">

    <Grid>
        <Image Source="background3.jpg" Aspect="AspectFill"/>

        <StackLayout Orientation="Vertical">

            <StackLayout VerticalOptions="CenterAndExpand"
                     BackgroundColor="#80000000"
                     Padding="25"
                     Margin="20, 0">
                <Label Text="Usuario"
               FontSize="Large"/>
                <Entry Text="{Binding Model.User}"
               Margin="0,0,0,15"
               ReturnType="Next"/>

                <Label Text="Contraseña"
               FontSize="Large"/>
                <Entry Text="{Binding Model.Pass}"
               Margin="0,0,0,15"
               ReturnType="Done"
               IsPassword="True"/>
            </StackLayout>

            <Button Text="Ingresar"
                    Command="{Binding LoginCommand}"
                    Margin="25"
                    Style="{StaticResource Key=PrimaryButton}"/>

        </StackLayout>
    </Grid>

    
    
</ContentPage>